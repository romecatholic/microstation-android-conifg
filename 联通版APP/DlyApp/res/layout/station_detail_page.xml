            android:textSize="18dp" />

        <TextView
            android:id="@+id/staitontime_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/ad_unknow"
            android:paddingLeft="5dp"
            android:textSize="18dp" />
