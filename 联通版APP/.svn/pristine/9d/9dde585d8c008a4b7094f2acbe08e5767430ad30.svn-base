<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/station_img"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:paddingLeft="2dp"
            android:src="@drawable/run" />

        <TextView
            android:id="@+id/station_name"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/station_img"
            android:layout_marginLeft="5dp"
            android:layout_height="35dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:textSize="20dp"
            android:text="@string/stationName" />
        <TextView
            android:id="@+id/stationid"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="@string/stationID" />
        <TextView
            android:id="@+id/alarm_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:text="@string/level3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/stationcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/gray_font"
            android:textSize="16dp"
            android:text="000000000001" />
        <TextView
             android:id="@+id/mmmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_font"
            android:layout_toRightOf="@id/stationcode"
            android:text="|" />
        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_font"
           	android:layout_toRightOf="@id/mmmm"
            android:textSize="16dp"
            android:text="000000000001" />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray_font"
            android:textSize="16dp"
            android:text="@string/area" />
    </RelativeLayout>

</LinearLayout>